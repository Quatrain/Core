{
   "extends": "@tsconfig/recommended/tsconfig.json",
   "compileOnSave": true,
   "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "declaration": true,
      "target": "ES2022",
      "lib": ["es2021"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "**/__test__", "**/*.spec.ts"]
}

{
   "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2022"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "isolatedModules": true,
      "incremental": true,
      "outDir": "dist",
      "removeComments": true
   },
   "exclude": ["node_modules", "**/dist", "**/lib"]
}
